                                    <div class="col-lg-6 col-sm-12">
                                        <div class="form-group">
                                            <input asp-for="Pessoa.Telefone" class="form-control" data-inputmask="'mask': '(99) 9999-9999'">
                                            <span asp-validation-for="Pessoa.Telefone"></span>
                                            <label asp-for="Pessoa.Telefone"></label>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-sm-12">
                                        <div class="form-group">
                                            <input asp-for="Pessoa.DadosPessoaFisica.Celular" class="form-control" data-inputmask="'mask': '(99) 99999-9999'">
                                            <span asp-validation-for="Pessoa.DadosPessoaFisica.Celular"></span>
                                            <label asp-for="Pessoa.DadosPessoaFisica.Celular"></label>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-sm-12">
                                        <div class="form-group">
                                            <input asp-for="Pessoa.Email" class="form-control">
                                            <span asp-validation-for="Pessoa.Email"></span>
                                            <label asp-for="Pessoa.Email"></label>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-sm-12">
                                        <div class="form-group">
                                            <input asp-for="Pessoa.Url" class="form-control">
                                            <span asp-validation-for="Pessoa.Url"></span>
                                            <label asp-for="Pessoa.Url"></label>
                                        </div>
                                    </div>
                                </div><!--end #dadospessoais -->
