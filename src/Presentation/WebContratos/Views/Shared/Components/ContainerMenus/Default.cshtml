@using PGLaw.Presentation.Web.Views.Shared.Components.ContainerMenus;

@model IEnumerable<PGLaw.Application.Sistema.Models.MenuVM>


<div class="menubar-fixed-panel">
    <div>
        <a class="btn btn-icon-toggle btn-default menubar-toggle" data-toggle="menubar" href="javascript:void(0);">
            <i class="fa fa-bars"></i>
        </a>
    </div>
    <div class="expanded">
        <a href="/">
            <span class="text-lg text-bold text-primary ">P<small>&</small>G SISTEMAS</span>
        </a>
    </div>
</div>
<div class="nano has-scrollbar">
    <div class="nano-content" tabindex="0">
        <div class="menubar-scroll-panel">

            <!-- BEGIN MAIN MENU -->
            <ul id="main-menu" class="gui-controls">

                <!-- BEGIN DASHBOARD -->
                <li class="expanding">
                    <a href="/">
                        <div class="gui-icon"><i class="md md-home"></i></div>
                        <span class="title">Dashboard</span>
                    </a>
                </li><!--end /menu-li -->
                <!-- END DASHBOARD -->
                <!-- BEGIN LEVELS -->
                @foreach (var raiz in Model.ToArray())
                {
                    ViewBag.IconClassMenu = ComponentHelper.ObterIconeCss(raiz.Titulo);
                    <vc:menu menu="raiz"></vc:menu>
                }
                <!-- END LEVELS -->

            </ul><!--end .main-menu -->
            <!-- END MAIN MENU -->

            <div class="menubar-foot-panel">
                <small class="no-linebreak hidden-folded">
                    <span class="opacity-75">Copyright © @DateTime.Now.Year.ToString()</span> <strong>P&G Advogados</strong>
                </small>
            </div>
        </div>
    </div><div class="nano-pane" style="display: block;"><div class="nano-slider" style="height: 20px; transform: translate(0px, 0px);"></div></div>
</div><!--end .menubar-scroll-panel-->
